@model IEnumerable<LocalTheatreCompany.Models.Article>

@{
    ViewBag.Title = "Articles";
}

<h2>Articles</h2>

@if (User.IsInRole("Admin"))
{
    <p>
         @Html.ActionLink("Create New", "Create")
      </p>
}

@foreach (var item in Model)
{
    <div class="form-group">

        <div class="col-md-10">
            @Html.DisplayFor(model => item.title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => item.title, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">

        <div class="col-md-10">
            @Html.DisplayFor(model => item.UserName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => item.UserName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
       
        <div class="col-md-10">
            @Html.DisplayFor(model => item.postText, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => item.postText, "", new { @class = "text-danger" })
        </div>

    </div>



    foreach (var cmt in item.Comments)
    {

        <div class="form-group">
            <label>Comment by</label>
            <label> @cmt.commentAuthor</label>
            <label> on </label>
            <label>@cmt.CommentDate</label>
            <label>@cmt.commentText</label>
        </div>



    }
    <div class="form-group">@Html.ActionLink("Details", "Details", new { id = item.articleId }) </div>

    if (User.IsInRole("Admin"))
    {
      <div class="form-group">
        @Html.ActionLink("Edit", "Edit", new { id = item.articleId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.articleId })
       </div>
    }




    }